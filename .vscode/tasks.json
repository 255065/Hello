{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                "@compile_flags.txt",
                "main.c",
                "-o",
                "Main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/25ws/cprog/code/Hello"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./Main",
            "options": {
                "cwd": "${workspaceFolder}/25ws/cprog/code/Hello"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ]
        }
    ]
}
